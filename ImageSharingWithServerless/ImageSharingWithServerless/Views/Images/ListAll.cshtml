@model IEnumerable<ImageSharingModels.Image>

@{
    ViewBag.Title = "All Images";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th>Caption</th>
        <th>Uploader</th>
        <th>Actions</th>
    </tr>

    @foreach (var image in Model)
    {
        <tr>
            <td>
                @image.Caption
            </td>
            <td>
                @image.UserName
            </td>
            <td>
                <a asp-action="Details" asp-route-userid="@image.UserId" asp-route-id="@image.Id">Details</a>

                @if (ViewBag.UserId.Equals(image.UserId))
                {
                    <text>
                        <!-- TODO add Edit and Delete links -->
                        <a asp-controller="Images" asp-action="Edit" asp-route-userid="@image.UserId" asp-route-id="@image.Id">Edit</a>
                        <a asp-controller="Images" asp-action="Delete" asp-route-userid="@image.UserId" asp-route-id="@image.Id">Delete</a>
                    </text>
                }
            </td>
        </tr>
    }
</table>